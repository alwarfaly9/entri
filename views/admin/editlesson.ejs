<%- include('header')%>
<%- include('sidebar')%>
<%- include('navbar')%>

<!-- Content wrapper -->
<div class="content-wrapper">
  <!-- Content -->

  <div class="container-xxl flex-grow-1 container-p-y">
    <nav aria-label="breadcrumb" class="fs-4">
      <ol class="breadcrumb">
        <li class=""><a href="/viewlesson?id=<%= editlesson.courseId._id %>&name=<%= editlesson.courseId.course  %>" class="text-hover-primary"><i class='bx bx-arrow-back me-2' style="cursor: pointer; color: #566A7F;"></i></a></li>
        <li class="breadcrumb-item">Course</li>
        <li class="breadcrumb-item"><a href="/viewcourse" class="text-hover-primary">View All Course</a></li>
        <li class="breadcrumb-item"><a href="/viewlesson?id=<%= editlesson.courseId._id %>&name=<%= editlesson.courseId.course  %>" class="text-hover-primary">View All Lesson</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit Lesson</li>
      </ol>
  </nav>

    <!-- Basic Layout & Basic with Icons -->
    <div class="row">
      <!-- Basic with Icons -->
      <div class="col-md-12">
        <div class="card mb-4">
          <h5 class="card-header fs-4 fw-bold">Edit Lesson</h5>
          <!-- Account -->
          <form action="" method="post" enctype="multipart/form-data">
            <div class="card-body">
              <% if (typeof message !=='undefined' ) { %>
              <p style="color: rgb(255, 0, 0);">
                <%= message %>
              </p>
              <% } %>
              <div class="row">
                <div class="col-md-6">
                  <input type="hidden" name="id" value="<%= editlesson.id %>">
                  <input type="hidden" name="oldImage" value="<%= editlesson.avatar %>">
                  <input type="hidden" name="courseId" value="<%= editlesson.courseId._id  %>">
                  <div class="row mb-4">
                    <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Image</label>
                    <div class="col-sm-10">
                      <div class="d-flex align-items-start align-items-sm-center gap-4">
                        <img src="/<%= editlesson.avatar %>" alt="<%= editlesson.avatar %>" class="d-block rounded border border-gray-300" height="100" width="100"  id="previewImage" />
                        <div class="button-wrapper">
                          <label for="upload" class="btn btn-primary me-2 mb-4" tabindex="0">
                            <span class="d-none d-sm-block">Update
                              Image</span>
                            <i class="bx bx-upload d-block d-sm-none"></i>
                            <input type="file" id="upload" name="avatar" class="account-file-input" hidden accept="image/png, image/jpeg,image/jpg" />
                          </label>
                        </div>
                      </div>
                    </div>
                  </div>

                  <div class="row mb-4">
                    <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Lesson</label>
                    <div class="col-sm-10">
                      <div class="input-group input-group-merge">
                        <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-user"></i></span>
                        <input type="text" class="form-control" name="lesson" value="<%= editlesson.lesson %>" required id="basic-icon-default-fullname" placeholder="Enter slider Title" aria-label="slider" aria-describedby="basic-icon-default-fullname2" />
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row justify-content-end">
                  <div class="col-sm-11">
                    <button type="submit" class="btn btn-primary">Save</button>
                  </div>
                </div>
              </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- / Content -->

<%- include('footer')%>