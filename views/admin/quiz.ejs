<%- include('header')%>
<%- include('sidebar')%>
<%- include('navbar')%>

<!-- Content wrapper -->
<div class="content-wrapper">
    <!-- Content -->
    <div class="container-xxl flex-grow-1 container-p-y">
        <!-- Breadcrumb Navigation -->
        <nav aria-label="breadcrumb" class="fs-4">
            <ol class="breadcrumb">
                <!-- Back Icon -->
                <li>
                    <i class='bx bx-arrow-back me-2' style="cursor: pointer; color: #566A7F;"></i>
                </li>
                <li class="breadcrumb-item">Assignment</li>
                <li class="breadcrumb-item">
                    <a href="/viewassignment" class="text-hover-primary">View All Assignment</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="/viewquiz?id=<%= assignment._id %>" class="text-hover-primary">View All Quiz</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Add Quiz</li>
            </ol>
        </nav>

        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">
                    <h5 class="card-header">Add Question</h5>

                    <!-- Form to Add Question -->
                    <form action="" method="post">
                        <div class="card-body">
                            <% if (typeof message !== 'undefined') { %>
                                <p style="color: rgb(255, 0, 0);">
                                    <%= message %>
                                </p>
                            <% } %>
                            <% if(flash.error.length > 0) { %>
                                <div class="d-inline-block text-danger fs-5 pb-2 mb-3 fw-bold" role="alert">
                                    <%= flash.error %>
                                </div>
                            <% } %>

                            <div class="row">
                                <div class="col-md-6">
                                    <!-- Question Input -->
                                    <div class="row mb-3">
                                        <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Question</label>
                                        <div class="col-sm-10">
                                            <div class="input-group input-group-merge">
                                                <span id="basic-icon-default-fullname2" class="input-group-text">
                                                    <i class='bx bx-book-open'></i>
                                                </span>
                                                <input type="text" class="form-control" name="text" required
                                                    placeholder="Enter Question" aria-label="Question"
                                                    aria-describedby="basic-icon-default-fullname2" />
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Option A -->
                                    <div class="row mb-3">
                                        <label class="col-sm-2 col-form-label">
                                            <input class="form-check-input" type="radio" name="correctOption" value="A" />
                                        </label>
                                        <div class="col-sm-10">
                                            <div class="input-group input-group-merge">
                                                <input type="text" class="form-control" name="optionA" required
                                                    placeholder="Enter Option A" aria-label="Option A"
                                                    aria-describedby="basic-icon-default-fullname2" />
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Option B -->
                                    <div class="row mb-3">
                                        <label class="col-sm-2 col-form-label">
                                            <input class="form-check-input" type="radio" name="correctOption" value="B" />
                                        </label>
                                        <div class="col-sm-10">
                                            <div class="input-group input-group-merge">
                                                <input type="text" class="form-control" name="optionB" required
                                                    placeholder="Enter Option B" aria-label="Option B"
                                                    aria-describedby="basic-icon-default-fullname2" />
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Option C -->
                                    <div class="row mb-3">
                                        <label class="col-sm-2 col-form-label">
                                            <input class="form-check-input" type="radio" name="correctOption" value="C" />
                                        </label>
                                        <div class="col-sm-10">
                                            <div class="input-group input-group-merge">
                                                <input type="text" class="form-control" name="optionC" required
                                                    placeholder="Enter Option C" aria-label="Option C"
                                                    aria-describedby="basic-icon-default-fullname2" />
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Option D -->
                                    <div class="row mb-3">
                                        <label class="col-sm-2 col-form-label">
                                            <input class="form-check-input" type="radio" name="correctOption" value="D" />
                                        </label>
                                        <div class="col-sm-10">
                                            <div class="input-group input-group-merge">
                                                <input type="text" class="form-control" name="optionD" required
                                                    placeholder="Enter Option D" aria-label="Option D"
                                                    aria-describedby="basic-icon-default-fullname2" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="row justify-content-end">
                                <div class="col-sm-11">
                                    <button type="submit" class="btn btn-primary">Create</button>
                                </div>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- / Content -->

<%- include('footer')%>
