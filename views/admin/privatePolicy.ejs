<%- include('header')%>
<%- include('sidebar')%>
<%- include('navbar')%>

<!-- Content wrapper -->
<div class="content-wrapper">
  <!-- Content -->

  <div class="container-xxl flex-grow-1 container-p-y">
    <nav aria-label="breadcrumb" class="fs-4">
      <ol class="breadcrumb">
        <li class=""><i class='bx bx-arrow-back me-2' style="cursor: pointer; color: #566A7F;"></i></a></li>
        <li class="breadcrumb-item">Pages</li>
        <li class="breadcrumb-item active" aria-current="page">Private Policy</li>
      </ol>
    </nav>

    <!-- Basic Layout & Basic with Icons -->
    <div class="row">
      <!-- Basic with Icons -->
      <div class="col-md-12">
        <div class="card mb-3">
          <h5 class="card-header">Private Policy</h5>
          <!-- Account -->
          <form action="/add-private-policy" method="post">
            <div class="card-body pt-0">
              <% if (typeof message !=='undefined' ) { %>
              <p style="color: rgb(255, 0, 0);">
                <%= message %>
              </p>
              <% } %>
              <% if(flash.error.length> 0){ %>
              <div class="d-inline-block text-danger fs-5 pb-2 mb-3 fw-bold" role="alert">
                <%= flash.error %>
              </div>
              <% } %>
              <div class="row mb-4">
                <div class="col-sm-12">
                  <div class="">
                    <textarea class="form-control" name="private_policy" id="kt_docs_second_ckeditor_classic" placeholder="Write private policy">
                        <%- privatePolicy && privatePolicy.private_policy  ? privatePolicy.private_policy : "" %>
                    </textarea>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-10">
                  <button type="submit" class="btn btn-primary">Save</button>
                </div>
              </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- / Content -->

<%- include('footer')%>